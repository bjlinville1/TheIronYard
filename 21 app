  def standard_deck
      t = 1
      m = 0
      n = 1
      o = 0
      name_array = ["Ace","Two","Three","Four","Five","Six","Seven","Eight","Nine","Ten","Jack","Queen","King"]
      suit_array = ["Spades","Clubs","Diamonds","Hearts"]
    cards_array = []
    while t <53
      while  o < suit_array.length
        while m < name_array.length
          card = Card.new
          card.name  = "#{name_array[m]} of #{suit_array[o]}"
          card.value = ["#{name_array.index("#name_array[m]")}"] #I want this to be the index value of name_array[m] (And because I don't know how to create an object, I am unable to check to see if line 32 will actually work)
          card.suit  = ["#{suit_array[o]}"]
          cards_array.push(card)
          m += 1
          t += 1
        end
      m -= name_array.length
      n += 1
      o += 1
      end
