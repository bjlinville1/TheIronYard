class Card
  attr_accessor :name
  attr_accessor :suit
  attr_accessor :value
  attr_accessor :frequency

  def initialize
      self.name     = ""
      self.suit    = []
      self.value = []
      self.frequency = []
  end

end

class Game
  attr_accessor :name
  attr_accessor :decks
  attr_accessor :number_of_players
  attr_accessor :number_of_hands
  attr_accessor :cards_per_hand
  attr_accessor :cards_dealt_increment

  def initialize
    self.name                  = ""
    self.decks                 = []
    self.number_of_players     = []
    self.number_of_hands       = []
    self.cards_per_hand        = []
    self.cards_dealt_increment = []
  end

  def new_game
    game = Game.new
    game.name                  = ""
    game.decks                 = []
    game.number_of_players     = []
    game.number_of_hands       = []
    game.cards_per_hand        = []
    game.cards_dealt_increment = []
  end
