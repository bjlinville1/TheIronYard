<h3>Looks like you need to edit your frog</h3>

<form action="/edit_a_frog/<%= @frogs.id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <label for="user_name">User Name</label>
  <input type="text" id="user_name" name="frog[user_name]" value="<%= @frogs.user_name %>">
  <br>

  <label for="password">Password</label>
  <input type="text" id="password" name="frog[password]" value="<%= @frogs.password %>">

<br>
<label for="blog">Blog</label> 
<br>
<textarea name="frog[blog]" cols="50" rows="25" value="<%= @frogs.blog %>">
</textarea>
 <br>
 <input type="submit" value="Update Frog">
</form>
<a href="/">Back</a>

