class Items
  attr_accessor :name
  attr_accessor :price
  attr_accessor :modifier

   @@list_of_items = []

  def initialize
    self.name     = ""
    self.price = []
    self.modifier = []
  end

  def add_item
    item = Item.new
    @@list_of_items.push item
  end

  def self.access 
    @@list_of_items
  end
end


Item.add_item

stick = Item.new
name = stick
price = 3
modifier = 4

p @@list_of_items