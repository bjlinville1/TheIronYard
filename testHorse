class Participants
    attr_accessor :species
    attr_accessor :name
    attr_accessor :position
    attr_accessor :horse
    attr_accessor :items

    @@list_of_participants = []

  def initialize
    puts "Let the racing Begin!"
    self.species  = ""
    self.name     = ""
    self.position = []
    self.horse    = ""
    self.items    = ""
  end

  def add_participants(*participant_attributes)

    #User prompt to Start 
    puts "How many humans want to race?"
    humans = gets.chomp
    puts "How many total horses do you want to have race?"
    total  = gets.chomp
    robots = total - humans
    horses = total

    n=0

    #build humans loop
    while n <= humans 
      puts "Enter a name for your character!"
      participant[n]          = Participants.new
      participant[n].name     = gets.chomp
      participant[n].species  = "human"
      participant[n].position = [n]
      participant[n].horse    = [n]
      participant[n].items    = ""
      @@list_of_participants.push participant
      n += 1
    end


    #build robots loop
    while n <= robots 
      robot_[n] = Participants.new
      robot_[n].species  = "cyborg"
      robot_[n].name     = "#{robot_[n]}"
      robot_[n].position = [n]
      robot_[n].horse    = [n]
      robot_[n].items    = ""
      @@list_of_participants.push robot_[n]
      n += 1
    end
  end
end