<%= form_for @patient do |x| %>
    <%= x.label :first_name, "First name:" %>
    <%= x.text_field :first_name %>
  <br>
    <%= x.label :last_name, "Last name:"%>
    <%= x.text_field :last_name %>
  <br>
    <%= x.label :malady, "Malady:" %>
    <%= x.text_field :malady %>
  <br>
    <%= x.label :gender, "Gender:"%>
    <%= x.radio_button :gender, 'Male', :checked => true %> 
    <%= label :gender_male, 'Male' %>
    <%= x.radio_button :gender, 'Female' %>
    <%= label :gender_female, 'Female' %>
  <br>
    <%= x.label :date_of_birth, "Date of birth" %>
    <%= x.date_select(:date_of_birth, start_year: 1800, end_year: 2014) %>
<!-- I don't want to have to update my code every year. How can i get these dates to change with the times? -->
  <br>
    <%= x.submit "Save patient record" %>
<% end %>

  <br>

<%= link_to "Back", root_path %>